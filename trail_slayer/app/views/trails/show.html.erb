<div class="page-header">
  <%= link_to trails_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_trail_path(@trail), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show trail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Trail name:</dt>
  <dd><%= @trail.trail_name %></dd>

  <dt>Photo url:</dt>
  <dd><%= @trail.photo_url %></dd>

  <dt>Skill level:</dt>
  <dd><%= @trail.skill_level %></dd>

  <dt>Trail type:</dt>
  <dd><%= @trail.trail_type %></dd>

  <dt>Elevation:</dt>
  <dd><%= @trail.elevation %></dd>

  <dt>Elevation change:</dt>
  <dd><%= @trail.elevation_change %></dd>

  <dt>Description:</dt>
  <dd><%= @trail.description %></dd>

  <dt>Location:</dt>
  <dd><%= @trail.location %></dd>

  <dt>User reviews:</dt>
  <dd><%= @trail.user_reviews %></dd>

</dl>
