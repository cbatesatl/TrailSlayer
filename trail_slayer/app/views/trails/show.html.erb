<div class="page-header">
  <%= link_to trails_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1>Trail details</h1>
</div>

<dl class="dl-horizontal">
  <dt>Trail name:</dt>
  <dd><%= @trail.trail_name %></dd>

  <dt>Skill level:</dt>
  <dd><%= @trail.skill_level %></dd>

  <dt>Trail type:</dt>
  <dd><%= @trail.trail_type %></dd>

  <dt>Mileage:</dt>
  <dd><%= @trail.mileage %></dd>


  <dt>Description:</dt>
  <dd><%= @trail.description %></dd>

  <dt>Location:</dt>
  <dd><%= @trail.location %></dd>



</dl>
