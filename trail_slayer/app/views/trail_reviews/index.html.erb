<div class="page-header">
  <%= link_to new_trail_review_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Trail review
  <% end %>
  <h1>Listing trail_reviews</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>User</th>
            <th>Trail</th>
            <th>Review</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @trail_reviews) do |trail_review| %>
            <td><%= trail_review.user_id %></td>
            <td><%= trail_review.trail_id %></td>
            <td><%= trail_review.review %></td>
            <td><%= link_to 'Show', trail_review %></td>
        <td><%= link_to 'Edit', edit_trail_review_path(trail_review) %></td>
        <td><%= link_to 'Destroy', trail_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
